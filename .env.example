# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/dbname"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-here"

# Email Service Configuration (Optional)
# SMTP settings for email notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="Project Management <noreply@yourcompany.com>"

# Server Configuration
PORT="3001"
NODE_ENV="development"

# ====================================
# MULTI-TENANT CONFIGURATION
# ====================================

# Domain Configuration
# Your main domain (without protocol)
DOMAIN="yourdomain.com"

# Allowed origins for CORS (supports wildcard for subdomains)
ALLOWED_ORIGINS="https://yourdomain.com,https://*.yourdomain.com"

# Session Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET="your-random-secure-session-secret-min-32-characters-long"

# Replit OAuth Configuration (if using)
REPLIT_DOMAINS="yourdomain.com,*.yourdomain.com"
ISSUER_URL="https://replit.com/oidc"
REPL_ID="your-repl-id-here"

# Multi-Tenancy Limits
DEFAULT_SUBDOMAIN="default"
MAX_ORGANIZATIONS="1000"
MAX_USERS_PER_ORG="1000"

# ====================================
# PHASE 1: PRODUCTION MONITORING CONFIGURATION
# ====================================

# Sentry Error Tracking & Performance Monitoring
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ENABLED="true"
SENTRY_SAMPLE_RATE="1.0"
SENTRY_TRACES_SAMPLE_RATE="0.1"
SENTRY_PROFILES_SAMPLE_RATE="0.1"
SENTRY_RELEASE="1.0.0"

# Automated Database Backup System
BACKUP_ENABLED="true"
BACKUP_PATH="/backup/db-backups"
BACKUP_RETENTION_DAYS="30"
BACKUP_CRON_SCHEDULE="0 2 * * *"
BACKUP_NOTIFICATION_EMAILS="admin@company.com,ops@company.com"

# AWS S3 for Backup Storage (optional)
AWS_S3_BUCKET="your-backup-bucket"
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"

# Uptime Monitoring & Alerting
UPTIME_ALERTS_ENABLED="true"
UPTIME_ALERT_EMAILS="admin@company.com,ops@company.com"
UPTIME_WEBHOOK_URL="https://your-webhook-url.com/alert"
UPTIME_SLACK_WEBHOOK="https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX"
UPTIME_ALERT_COOLDOWN_MINUTES="15"

# Health Check Configuration
HEALTH_CHECK_TIMEOUT="5000"
METRICS_COLLECTION_INTERVAL="60"